<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/channel_list_background">

    <View
        android:visibility="invisible"
        android:id="@+id/separator"
        android:layout_width="@dimen/custom_dim_753_5"
        android:layout_height="@dimen/custom_dim_1"
        android:layout_marginStart="@dimen/custom_dim_102_5"
        android:layout_marginTop="@dimen/custom_dim_89"
        android:translationZ="@dimen/custom_dim_n10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <view class="com.iwedia.cltv.components.custom_card.CustomCard$CustomCardDetailsScene"
        android:id="@+id/custom_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/custom_dim_104"
        android:layout_marginTop="@dimen/custom_dim_115"
        app:cardCornerRadius="@dimen/custom_dim_7"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </view>

    <View
        android:id="@+id/drawable_zap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_160"
        android:background="@drawable/zap_banner_background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favorites_overlay"
        android:translationZ="@dimen/custom_dim_15"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/sort_by_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/favorites_gradient_view"
            android:layout_width="@dimen/custom_dim_200"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/favorites_linear_layout"
            android:layout_width="@dimen/custom_dim_280"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/favorites_gradient_view">

            <TextView
                android:id="@+id/favorites_overlay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_dim_88"
                android:layout_marginEnd="@dimen/custom_dim_87"
                android:textSize="@dimen/font_21"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.leanback.widget.VerticalGridView
                android:id="@+id/favorites_overlay_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_dim_15"
                android:layout_marginEnd="@dimen/custom_dim_72"
                android:overScrollMode="never"
                android:paddingBottom="@dimen/custom_dim_150"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/favorites_overlay_title"
                tools:listitem="@layout/sort_by_item"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:translationZ="@dimen/custom_dim_15"
        android:id="@+id/details_scene_left_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_102_5"
        android:layout_marginEnd="@dimen/custom_dim_104"
        android:layout_marginBottom="@dimen/custom_dim_32"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/buttons_horizontal_grid_view"
            android:layout_width="@dimen/custom_dim_0"
            android:layout_height="@dimen/custom_dim_40"
            android:layout_marginEnd="@dimen/custom_dim_130"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/audio_and_subtitles_container"
        android:layout_width="@dimen/custom_dim_500"
        android:layout_height="match_parent"
        android:translationZ="@dimen/custom_dim_20"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/audio_and_subtitles_gradient_view"
            android:layout_width="@dimen/custom_dim_200"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/audio_and_subtitles_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_dim_88"
                android:layout_marginEnd="@dimen/custom_dim_87_5"
                android:textSize="@dimen/font_21"
                tools:text="Audio" />

            <com.bosphere.fadingedgelayout.FadingEdgeLayout
                android:id="@+id/fading_edge_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fel_edge="bottom|top"
                app:fel_size_bottom="@dimen/custom_dim_200"
                app:fel_size_top="@dimen/custom_dim_200">

                <androidx.leanback.widget.VerticalGridView
                    android:id="@+id/side_view_vertical_grid_view"
                    android:clipToPadding="false"
                    android:layout_marginEnd="@dimen/custom_dim_66"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/custom_dim_40"/>

            </com.bosphere.fadingedgelayout.FadingEdgeLayout>

        </LinearLayout>

    </LinearLayout>

    <view class="com.iwedia.cltv.components.CustomDetails$CustomDetailsDetailsScene"
        android:id="@+id/custom_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_92_5"
        android:layout_marginEnd="@dimen/custom_dim_92_5"
        android:layout_marginTop="@dimen/custom_dim_52"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>