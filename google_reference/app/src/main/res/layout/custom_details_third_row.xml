<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="#4D436E95"
    tools:showIn="@layout/custom_details">

    <TextView
        android:id="@+id/event_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6.9sp"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"
        android:visibility="gone"
        tools:text="Genre: Social/Political issues/Economics "
        tools:visibility="visible" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/custom_dim_4"
        android:layout_height="@dimen/custom_dim_4"
        android:layout_marginStart="@dimen/custom_dim_4"
        android:layout_marginTop="@dimen/custom_dim_2"
        android:background="@drawable/ic_dot"
        android:visibility="gone"
        tools:visibility="visible" />

    <include
        android:id="@+id/parental_rating_linear_layout_third_row"
        layout="@layout/custom_details_parental_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_4"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/parental_rating_linear_layout_third_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/channel_index_text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="#bdc1c6"
        android:textSize="@dimen/font_12"
        tools:text="145" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginLeft="@dimen/custom_dim_5"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/custom_dim_7_5"
        app:cardElevation="@dimen/custom_dim_0"
        tools:cardBackgroundColor="#00D59999">

        <ImageView
            android:id="@+id/channel_logo_image_view_2"
            android:layout_width="@dimen/custom_dim_42_5"
            android:layout_height="@dimen/custom_dim_24"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:visibility="gone"
            tools:background="@color/color_4"
            tools:src="@drawable/ic_skip"
            tools:visibility="visible" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/channel_or_event_name_text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/font_n_2"
        android:maxLines="2"
        android:textColor="#e8f0fe"
        android:textSize="@dimen/font_12"
        android:visibility="gone"
        tools:background="#4DAF884E"
        tools:ignore="HardcodedText"
        tools:layout_width="@dimen/custom_dim_130"
        tools:text="This can be visible only when image is not loaded!"
        tools:visibility="visible" />

    <include
        android:id="@+id/event_start_end_time_row_3"
        layout="@layout/custom_details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>