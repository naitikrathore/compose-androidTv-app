<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_input_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/inputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_15"
        android:paddingEnd="@dimen/custom_dim_15"
        android:paddingStart="@dimen/custom_dim_15"
        android:paddingTop="@dimen/custom_dim_8"
        android:paddingBottom="@dimen/custom_dim_8"
        android:gravity="end"
        android:layout_marginEnd="@dimen/custom_dim_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>