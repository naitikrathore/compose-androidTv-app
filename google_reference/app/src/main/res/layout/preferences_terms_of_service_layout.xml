<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descriptionTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/custom_dim_100_5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/custom_dim_200"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/preferences_terms_of_service_left_options"
        android:translationZ="@dimen/custom_dim_10"
        android:layout_width="@dimen/custom_dim_210"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:layout_marginStart="@dimen/custom_dim_100_5"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/preference_subcategory_item"
        android:layout_marginTop="@dimen/custom_dim_25"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>