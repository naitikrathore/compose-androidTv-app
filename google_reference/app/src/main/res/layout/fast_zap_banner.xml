<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_constraint_layout"
    android:layout_width="962dp"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#80000000"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginBottom="46dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#335C83A6">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tv_guide_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:focusable="true"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            tools:cardBackgroundColor="#66e8f0fe">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="7dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_guide_image_view"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back_to_guide_icon" />

                <TextView
                    android:id="@+id/tv_guide_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:layout_marginHorizontal="9dp"
                    android:fontFamily="@font/work_sans_medium"
                    android:includeFontPadding="false"
                    android:text="TV GUIDE"
                    android:textColor="@color/white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8.5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/arrow_up_image_view"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:rotation="-90"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/channel_image_card_view"
                android:layout_width="61dp"
                android:layout_height="35dp"
                android:focusable="true"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="4.5dp"
                app:cardElevation="0dp"
                android:layout_marginVertical="9dp"
                app:strokeColor="@color/white"
                tools:cardBackgroundColor="#66E8F0FE">

                <ImageView
                    android:id="@+id/channel_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:scaleType="centerCrop"/>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/arrow_down_image_view"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:rotation="90"
                android:src="@drawable/baseline_arrow_forward_ios_24" />

        </LinearLayout>

        <view
            android:id="@+id/custom_details"
            class="com.iwedia.cltv.components.CustomDetails$CustomDetailsZapBannerFast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp">

        </view>

        <com.iwedia.cltv.components.CustomButton
            android:id="@+id/subtitle_custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/custom_dim_10"
            app:button_type="SUBTITLE"
            tools:background="#807546A3"
            android:visibility="gone"
            tools:layout_height="39dp"
            tools:layout_width="39dp" />

        <com.iwedia.cltv.components.CustomButton
            android:id="@+id/audio_custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_type="AUDIO"
            tools:background="#80A3A346"
            android:visibility="gone"
            tools:layout_height="39dp"
            tools:layout_width="39dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_subtitle_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        tools:background="#4D426A50"
        tools:layout_width="300dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>