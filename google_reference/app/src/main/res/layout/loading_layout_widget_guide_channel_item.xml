<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="@dimen/custom_dim_157_5"
    android:layout_height="@dimen/custom_dim_50"
    android:gravity="end|center"
    android:layout_marginEnd="@dimen/custom_dim_6"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/index_layout"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/guide_channel_list_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_36"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/loading_gradient_background" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
