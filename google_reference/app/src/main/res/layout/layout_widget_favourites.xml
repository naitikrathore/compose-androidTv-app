<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:translationZ="@dimen/custom_dim_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bg_top_fade"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/bg_top_fade_channel_scene_solid_part"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dim_140"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/bg_top_fade_channel_scene"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dim_73_5" />

    </LinearLayout>

    <TextView
        android:id="@+id/no_events_msg"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/font_20" />

    <TextView
        android:id="@+id/hint_overlay_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_72_5"
        android:layout_marginTop="@dimen/custom_dim_5"
        android:layout_marginEnd="@dimen/custom_dim_5"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textSize="@dimen/font_11"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/addButton"
        app:layout_constraintEnd_toStartOf="@id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/addButton" />

    <ImageView
        android:id="@+id/addButton"
        android:layout_width="@dimen/custom_dim_44"
        android:layout_height="@dimen/custom_dim_35"
        android:stateListAnimator="@null"
        android:layout_marginTop="@dimen/custom_dim_96"
        android:layout_marginStart="@dimen/custom_dim_202_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/add"/>

    <androidx.leanback.widget.HorizontalGridView
        android:translationZ="@dimen/custom_dim_10"
        android:id="@+id/favourites_filter_list_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_38"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/custom_dim_96"
        android:layout_marginStart="@dimen/custom_dim_245"
        android:layout_marginEnd="@dimen/custom_dim_30"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.leanback.widget.VerticalGridView
        android:paddingTop="@dimen/custom_dim_160_5"
        android:paddingBottom="@dimen/custom_dim_46_5"
        android:id="@+id/fav_channels_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/custom_dim_74_5"
        android:paddingEnd="@dimen/custom_dim_73"/>

</androidx.constraintlayout.widget.ConstraintLayout>