<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/custom_dim_6">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guide_events_container_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/custom_dim_50"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingEnd="@dimen/custom_dim_157_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/guide_event_list_item"
        />

    <View
        android:id="@+id/guide_events_container_item_separator_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_186"
        app:layout_constraintTop_toBottomOf="@+id/guide_events_container_item"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>