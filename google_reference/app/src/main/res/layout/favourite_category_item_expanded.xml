<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favourites_category_item_root_view"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/custom_dim_38"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingStart="@dimen/custom_dim_10"
    android:paddingEnd="@dimen/custom_dim_10"
    android:paddingTop="@dimen/custom_dim_1"
    android:paddingBottom="@dimen/custom_dim_1">

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/favourite_category_item_category_text"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:foregroundGravity="center_vertical"
            android:textSize="@dimen/font_15"
            android:paddingStart="@dimen/custom_dim_15"
            android:paddingTop="@dimen/custom_dim_4"
            android:paddingEnd="@dimen/custom_dim_13"
            android:paddingBottom="@dimen/custom_dim_4"
            tools:text="Favorite 1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="@dimen/custom_dim_44"
        android:layout_height="@dimen/custom_dim_35"
        android:layout_marginStart="@dimen/custom_dim_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_layout"/>

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="@dimen/custom_dim_44"
        android:layout_height="@dimen/custom_dim_35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>