<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_shimmer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#B3000000"
    android:translationZ="-10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/channel_list_container"
        android:layout_width="@dimen/custom_dim_960"
        android:layout_height="@dimen/custom_dim_540"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_loading_items"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/custom_dim_86"
            android:layout_marginTop="@dimen/custom_dim_89"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />

            <include layout="@layout/loading_layout_channel_list_channel_event_item" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>