<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/guide_channel_list_root_view"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/custom_dim_44_5"
    android:layout_marginEnd="@dimen/custom_dim_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/guide_channel_list_item_view"
        android:layout_width="@dimen/custom_dim_152"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_marginTop="3sp"
            android:id="@+id/llIcons"
            app:layout_constraintStart_toStartOf="@+id/guide_channel_list_index"
            app:layout_constraintEnd_toEndOf="@+id/guide_channel_list_index"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/guide_is_locked"
                android:layout_width="@dimen/custom_dim_20"
                android:layout_height="@dimen/custom_dim_20"
                android:src="@drawable/ic_channel_lock_vertical"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/guide_is_skipped"
                android:layout_width="@dimen/custom_dim_20"
                android:layout_height="@dimen/custom_dim_20"
                app:layout_constraintLeft_toRightOf="@+id/is_locked"
                android:src="@drawable/ic_channel_skip_vertical"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="@dimen/custom_dim_8_5"
            android:id="@+id/guide_channel_list_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_13"
            android:text="100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="viewStart" />

        <ImageView
            android:id="@+id/guide_channel_list_logo"
            android:layout_width="@dimen/custom_dim_52_5"
            android:layout_height="@dimen/custom_dim_30"
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/custom_dim_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guide_channel_list_index" />

        <TextView
            android:id="@+id/guide_channel_list_no_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/custom_dim_14"
            android:layout_marginEnd="@dimen/custom_dim_14"
            android:ellipsize="end"
            android:lineSpacingMultiplier="0.7"
            android:lines="3"
            android:gravity="bottom"
            android:textAlignment="viewStart"
            android:textSize="@dimen/font_15"
            android:textStyle="bold"
            android:visibility="gone"
            app:fontFamily="@font/work_sans_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/guide_channel_list_index"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="RTL Zwei"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/guide_channel_list_separator_view"
        android:layout_width="@dimen/custom_dim_316"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@+id/guide_channel_list_item_view"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>