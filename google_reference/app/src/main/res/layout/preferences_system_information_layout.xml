<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.leanback.widget.VerticalGridView
        android:layout_width="@dimen/custom_dim_500"
        android:layout_height="@dimen/custom_dim_500"
        android:id="@+id/si_grid_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/custom_dim_113_5">
    </androidx.leanback.widget.VerticalGridView>

    <com.iwedia.cltv.scan_activity.core.ProgressBarView
        android:id="@+id/signal_strength_progress_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_538_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.iwedia.cltv.scan_activity.core.ProgressBarView
        android:id="@+id/signal_quality_progress_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/custom_dim_74_5"
        android:layout_marginStart="@dimen/custom_dim_538_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>