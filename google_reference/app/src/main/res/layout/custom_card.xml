<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_constraint_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true">

    <!-- channel_or_event_card_view must have transparent background (cardBackgroundColor) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/custom_button_card_view"
        android:layout_width="@dimen/custom_dim_152_5"
        android:layout_height="@dimen/custom_dim_97"
        app:cardCornerRadius="@dimen/custom_dim_15"
        app:cardElevation="@dimen/custom_dim_0"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#00000000"
        app:strokeWidth="@dimen/custom_dim_1_5"
        tools:cardBackgroundColor="#cc202124"
        tools:layout_height="@dimen/custom_dim_250"
        tools:layout_width="@dimen/custom_dim_383">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_container_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Image View for event photo -->
            <ImageView
                android:id="@+id/channel_or_event_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop" />

            <!--
            LinearLayout for:
                Event image (if there is image),
                Channel index,
                TimeTextView,
                Channel name (if there is no Event image)-->
            <LinearLayout
                android:id="@+id/content_container_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/custom_dim_9"
                android:paddingTop="@dimen/custom_dim_7_5"
                app:layout_constraintBottom_toTopOf="@id/icons_container_linear_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="#99808080">

            <TextView
                android:id="@+id/channel_or_event_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_dim_0"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:lines="1"
                android:marqueeRepeatLimit="-1"
                android:singleLine="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/font_n_2"
                android:textColor="#e8f0fe"
                android:textSize="@dimen/font_16"
                android:visibility="gone"
                tools:background="#4DAF884E"
                tools:ignore="HardcodedText"
                tools:text="This can be visible only in Channel List!"
                tools:visibility="visible" />

                <com.iwedia.cltv.TimeTextView
                    android:id="@+id/time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:textSize="@dimen/font_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="21:00 - 23:30"
                    tools:visibility="visible" />

<!--                next text view is used for Recordings to show it's duration-->
                <TextView
                    android:id="@+id/duration_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textSize="@dimen/font_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="21:00 - 23:30"
                    tools:visibility="visible" />

            </LinearLayout>

            <View
                android:id="@+id/bottom_gradient_background"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/bottom_gradient_background"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible" />

            <!-- LinearLayout is used to hoist all icons (watch, skip, lock...) -->
            <LinearLayout
                android:id="@+id/icons_container_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/custom_dim_9"
                android:paddingTop="@dimen/custom_dim_4_5"
                android:paddingBottom="@dimen/custom_dim_7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:background="#80989898">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/custom_dim_18"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/watch_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_16"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingEnd="@dimen/custom_dim_5_5"
                        android:src="@drawable/watch_icon"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#80A32287"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/skip_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_16"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingEnd="@dimen/custom_dim_5_5"
                        android:src="@drawable/ic_skip"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#80834D34"
                        tools:ignore="RtlSymmetry"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/lock_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_18"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingEnd="@dimen/custom_dim_5_5"
                        android:src="@drawable/ic_lock"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#807A5A2A"
                        tools:ignore="RtlSymmetry"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/radio_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_16"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingEnd="@dimen/custom_dim_5_5"
                        android:src="@drawable/ic_channel_radio_icon"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#807A5A2A"
                        tools:ignore="RtlSymmetry"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/watchlist_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_16"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingEnd="@dimen/custom_dim_5_5"
                        android:src="@drawable/watchlist"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#807A5A2A"
                        tools:ignore="RtlSymmetry"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/record_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_16"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingEnd="@dimen/custom_dim_5_5"
                        android:src="@drawable/record_icon"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#807A5A2A"
                        tools:ignore="RtlSymmetry"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/catchup_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_16"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingEnd="@dimen/custom_dim_5_5"
                        android:src="@drawable/catchup_icon"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#807A5A2A"
                        tools:ignore="RtlSymmetry"
                        tools:visibility="visible" />
                </LinearLayout>



                <View
                    android:layout_width="@dimen/custom_dim_0"
                    android:layout_height="@dimen/custom_dim_18"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/channel_index_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="5dp"
                    android:textColor="#bdc1c6"
                    android:textSize="@dimen/font_11"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/icons_container_linear_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_layout"
                    tools:text="145"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/channel_type_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="5dp"
                    android:textColor="#bdc1c6"
                    android:textSize="@dimen/font_11"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/icons_container_linear_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_layout"
                    tools:text="145"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/custom_dim_18"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/favorite_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/custom_dim_10"
                        android:adjustViewBounds="true"
                        android:importantForAccessibility="no"
                        android:paddingStart="@dimen/custom_dim_7_5"
                        android:src="@drawable/heart_empty_icon"
                        android:visibility="gone"
                        app:tint="#bdc1c6"
                        tools:background="#807A5A2A"
                        tools:ignore="RtlSymmetry"
                        tools:visibility="visible" />
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/blind_eye_image_view"
                android:layout_width="@dimen/custom_dim_41"
                android:layout_height="@dimen/custom_dim_41"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>