<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges = "true">

    <View
        android:id="@+id/guide_fade_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/custom_dim_140"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/broadcast_background_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/calendar_button_selector"
        android:layout_width="@dimen/custom_dim_46_5"
        android:layout_height="@dimen/custom_dim_34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/custom_dim_96"
        android:layout_marginStart="@dimen/custom_dim_144_5">
    </View>

    <ImageView
        android:id="@+id/calendar_button_icon"
        android:layout_width="@dimen/custom_dim_20"
        android:layout_height="@dimen/custom_dim_20"
        app:layout_constraintStart_toStartOf="@id/calendar_button_selector"
        app:layout_constraintTop_toTopOf="@id/calendar_button_selector"
        android:layout_marginTop="@dimen/custom_dim_7"
        android:layout_marginStart="@dimen/custom_dim_13"
        android:focusable="true"
        android:nextFocusRight="@id/home_filter_list_view"/>

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/guide_filter_list_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_38"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/custom_dim_94"
        android:layout_marginStart="@dimen/custom_dim_200"
        android:overScrollMode="never"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guide_date_tv"
        android:layout_width="@dimen/custom_dim_125_5"
        android:layout_height="@dimen/custom_dim_20"
        android:layout_marginBottom="@dimen/custom_dim_20"
        android:layout_marginStart="@dimen/custom_dim_19_5"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toTopOf="@+id/guide_channel_list"
        tools:text="08/02/2021"
        />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/guide_timeline_view"
        android:layout_width="wrap_content"
        android:clipToPadding="true"
        android:paddingStart="4dp"
        android:layout_height="@dimen/custom_dim_20"
        android:paddingEnd="@dimen/custom_dim_158"
        app:layout_constraintTop_toTopOf="@+id/guide_date_tv"
        app:layout_constraintBottom_toTopOf="@+id/guide_events_container"
        android:layout_marginBottom="@dimen/custom_dim_20"
        app:layout_constraintStart_toEndOf="@+id/guide_date_tv"
        />

    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/guide_channel_list"
        android:layout_width="@dimen/custom_dim_157_5"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/custom_dim_44"
        android:layout_marginTop="@dimen/custom_dim_184"
        android:paddingBottom="@dimen/custom_dim_180"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/guide_channel_list_item" />

    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/guide_events_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:listitem="@layout/guide_events_container_item"
        android:layout_marginTop="@dimen/custom_dim_184"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/custom_dim_180"
        app:layout_constraintStart_toEndOf="@+id/guide_channel_list" />

    <RelativeLayout
        android:id="@+id/guide_past_overlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/guide_channel_list"
        app:layout_constraintStart_toEndOf="@+id/guide_channel_list"
        android:visibility="gone">

        <View
            android:id="@+id/past_overlay_separator"
            android:layout_width="@dimen/custom_dim_1"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
        </View>
    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_filter_container"
        android:layout_width="@dimen/custom_dim_480"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/calendar_gradient_view"
            android:layout_width="@dimen/custom_dim_200"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/calendar_linear_layout"
            android:layout_width="@dimen/custom_dim_280"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/calendar_gradient_view">

            <TextView
                android:id="@+id/calendar_filter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_dim_88"
                android:layout_marginEnd="@dimen/custom_dim_87"
                android:textSize="@dimen/font_21"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.leanback.widget.VerticalGridView
                android:id="@+id/calendar_filter_grid_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_dim_15"
                android:layout_marginEnd="@dimen/custom_dim_72"
                android:overScrollMode="never"
                android:layout_marginBottom="@dimen/custom_dim_50"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/calendar_filter_title"
                tools:listitem="@layout/sort_by_item"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/favorites_overlay"
        android:layout_width="@dimen/custom_dim_480"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/favorites_gradient_view"
            android:layout_width="@dimen/custom_dim_200"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/favorites_linear_layout"
            android:layout_width="@dimen/custom_dim_280"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/favorites_gradient_view">

        <TextView
            android:id="@+id/favorites_overlay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_dim_88"
            android:layout_marginEnd="@dimen/custom_dim_87"
            android:textSize="@dimen/font_21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.leanback.widget.VerticalGridView
            android:id="@+id/favorites_overlay_grid_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_dim_15"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/custom_dim_3"
            android:layout_marginEnd="@dimen/custom_dim_72"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/custom_dim_150"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favorites_overlay_title"
            tools:listitem="@layout/sort_by_item"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>