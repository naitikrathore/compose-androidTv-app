<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="272dp"
    android:layout_height="match_parent"
    android:id="@+id/background_layout_input"
    android:background="@drawable/input_main_round_corner"
    android:layout_marginStart="24dp"
    android:layout_marginBottom="16dp"
    android:layout_marginTop="16dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/input_text2"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/custom_dim_10"
        android:text="Exit FactoryTV : 0 > 0 > 0 > INFO"
        android:textColor="#BFF2771A"
        android:textStyle="bold"
        android:textSize="@dimen/font_14"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/input_text"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:text="@string/inputs_text_string"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_below="@id/input_text2"
        android:lineHeight="16sp"
        android:textColor="@color/fti_text_color"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />


    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/input_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/input_text"
        android:layout_marginTop="24dp"
        android:focusable="true"
        android:clickable="true"
        />
</RelativeLayout>