<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/broadcast_background_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.bosphere.fadingedgelayout.FadingEdgeLayout
        android:layout_width="@dimen/custom_dim_0"
        android:layout_height="@dimen/custom_dim_320"
        app:fel_edge="bottom"
        app:fel_size_bottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/banner_bg"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY">
        </ImageView>

    </com.bosphere.fadingedgelayout.FadingEdgeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/custom_dim_102_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/no_events_msg"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/custom_dim_124"
                android:layout_marginStart="@dimen/custom_dim_92_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/font_20" />

            <view class="com.iwedia.cltv.anoki_fast.FastErrorInfo"
                android:id="@+id/no_internet_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/custom_dim_7"
                android:layout_marginTop="@dimen/custom_dim_10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="visible">
            </view>

            <view class="com.iwedia.cltv.anoki_fast.FastTosMoreInfo"
                android:id="@+id/tos_more_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/custom_dim_7"
                android:layout_marginTop="@dimen/custom_dim_50"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/custom_dim_10"
                android:visibility="visible">
            </view>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_dim_180">

                <com.iwedia.cltv.anoki_fast.FastHomeData
                    android:id="@+id/promotion_banner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/custom_dim_91_5"
                    android:layout_marginBottom="@dimen/custom_dim_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <view class="com.iwedia.cltv.components.CustomDetails$CustomDetailsFastHome"
                    android:id="@+id/custom_details_fast_home"
                    android:layout_width="0dp"
                    tools:background="#80846197"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/custom_dim_91_5"
                    android:layout_marginTop="@dimen/custom_dim_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                </view>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.leanback.widget.VerticalGridView
                android:id="@+id/for_you_recycler"
                tools:listitem="@layout/rail_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_internet_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.leanback.widget.VerticalGridView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>