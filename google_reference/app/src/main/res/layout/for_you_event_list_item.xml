<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/for_you_events_list_root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_list_image_container_wrapper"
        android:layout_width="@dimen/custom_dim_175_5"
        android:layout_height="@dimen/custom_dim_112"
        android:background="@color/transparent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/event_list_image_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/custom_dim_155"
            android:layout_height="@dimen/custom_dim_99_5">

            <ImageView
                android:id="@+id/channel_list_lock_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_channel_lock"
                android:layout_marginStart="@dimen/custom_dim_7_5"
                android:layout_marginTop="@dimen/custom_dim_7_5"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/channel_list_skip_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_channel_skip"
                android:visibility="visible"
                android:scaleType="centerInside"
                android:layout_marginTop="@dimen/custom_dim_7_5"
                android:layout_marginStart="@dimen/custom_dim_3"
                app:layout_constraintStart_toEndOf="@+id/channel_list_lock_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/events_list_image_card_holder"
                android:visibility="gone"
                android:layout_width="@dimen/custom_dim_152"
                android:layout_height="@dimen/custom_dim_96_5"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/custom_dim_7"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/event_list_image"
                    android:layout_width="@dimen/custom_dim_152"
                    android:layout_height="@dimen/custom_dim_96_5"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/time_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/custom_dim_48_5"
                    android:layout_marginTop="@dimen/custom_dim_48_5"
                    android:background="@drawable/for_you_time_gradient"
                    android:visibility="gone">

                    <com.iwedia.cltv.TimeTextView
                        android:id="@+id/time_with_image"
                        android:layout_width="@dimen/custom_dim_140"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/custom_dim_10"
                        android:gravity="center"
                        android:text="21:00 - 23:32"
                        android:textSize="@dimen/font_11"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/no_img_item_container"
                android:layout_width="@dimen/custom_dim_152"
                android:layout_height="@dimen/custom_dim_96_5"
                android:background="@drawable/round_edge_drawable"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icon_no_image"
                    android:layout_width="@dimen/custom_dim_20"
                    android:layout_height="@dimen/custom_dim_20"
                    android:layout_marginTop="@dimen/custom_dim_5"
                    android:layout_marginEnd="@dimen/custom_dim_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/title_no_image"
                    android:layout_width="@dimen/custom_dim_115"
                    android:layout_height="@dimen/custom_dim_60"
                    android:layout_marginTop="@dimen/custom_dim_10_5"
                    android:gravity="center"
                    android:padding="@dimen/custom_dim_2"
                    android:lineSpacingMultiplier="0.8"
                    android:maxLines="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13"
                    app:layout_constraintBottom_toTopOf="@id/time_no_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.iwedia.cltv.TimeTextView
                    android:id="@+id/time_no_image"
                    android:layout_width="@dimen/custom_dim_140"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/custom_dim_10"
                    android:gravity="center"
                    android:textSize="@dimen/font_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>