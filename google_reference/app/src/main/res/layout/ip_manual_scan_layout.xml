<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background_layout">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/custom_dim_150"
        android:gravity="center_horizontal" />

    <com.iwedia.cltv.ReferenceDrawableButton
        android:id="@+id/enter_url"
        android:layout_width="@dimen/custom_dim_220"
        android:layout_height="@dimen/custom_dim_40"
        android:textSize="@dimen/font_25"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/custom_dim_50"
        android:gravity="center_horizontal|center_vertical"/>

    <com.iwedia.cltv.ReferenceDrawableButton
        android:id="@+id/browse_locally"
        android:layout_width="@dimen/custom_dim_220"
        android:layout_height="@dimen/custom_dim_40"
        android:textSize="@dimen/font_25"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/enter_url"/>
</RelativeLayout>