<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hide_blue_mute_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blue_mute_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/radio_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/radio_logo"
            android:layout_width="@dimen/custom_dim_100"
            android:layout_height="@dimen/custom_dim_70"
            android:gravity="center"
            android:layout_marginTop="@dimen/custom_dim_70"
            android:includeFontPadding="false"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/radio_index"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/radio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_dim_75"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="21sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/radio_index"/>

        <TextView
            android:id="@+id/radio_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textSize="21sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_radio" />

        <TextView
            android:id="@+id/txt_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginTop="-5dp"
            android:text="Radio"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/radio_index"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/radio_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_radio" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/radio_intro_animation"
            android:layout_width="@dimen/custom_dim_600"
            android:layout_height="@dimen/custom_dim_300"
            android:visibility="visible"
            android:alpha="0.8"
            android:layout_marginStart="@dimen/custom_dim_10"
            android:layout_marginTop="@dimen/custom_dim_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/radio_loop_animation"
            android:layout_width="@dimen/custom_dim_600"
            android:layout_height="@dimen/custom_dim_300"
            android:visibility="visible"
            android:alpha="0.8"
            android:layout_marginStart="@dimen/custom_dim_10"
            android:layout_marginTop="@dimen/custom_dim_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/service_not_running"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:src="@drawable/ic_icon_ionic_ios_information_circle_outline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18.6dp"
            android:text="Service is not running"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_icon" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9.5dp"
            android:alpha="0.5"
            android:fontFamily="@font/work_sans_italic"
            android:text="Contact your operator for more information"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrambled_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/scrambled_iv"
            android:layout_width="@dimen/custom_dim_68"
            android:layout_height="@dimen/custom_dim_68"
            android:layout_marginTop="151dp"
            android:background="@drawable/ic_scrambled"
            android:gravity="center"
            android:includeFontPadding="false"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scrambled_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/scrambled_iv" />

        <TextView
            android:id="@+id/scrambled_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/scrambled_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/locked_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/channel_List_channel_container_info"
            android:layout_width="@dimen/custom_dim_149"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/custom_dim_68_5"
            android:layout_marginBottom="@dimen/custom_dim_60_5"
            android:maxHeight="@dimen/custom_dim_112"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:lineSpacingExtra="-8sp"
            android:textSize="28.3dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/event_rating"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:id="@+id/event_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.3dp"
            android:lineSpacingExtra="5.9sp"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/custom_dim_10"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/lockIv"/>

        <ImageView
            android:id="@+id/lockIv"
            android:layout_width="@dimen/custom_dim_43_5"
            android:layout_height="@dimen/custom_dim_62_5"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/title_scrambled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/custom_dim_18_5"
            tools:src="@drawable/ic_locked_ic"/>

        <TextView
            android:id="@+id/title_scrambled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/custom_dim_10"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textSize="@dimen/font_21"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/parental_control_settings"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/custom_dim_225"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textSize="@dimen/font_13"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/enter_pin_using_number"/>

        <ImageView
            android:id="@+id/lock_scene_logo"
            android:layout_width="@dimen/custom_dim_89"
            android:layout_height="@dimen/custom_dim_49_5"
            android:layout_marginTop="@dimen/custom_dim_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message" />

        <TextView
            android:id="@+id/lock_scene_name"
            android:layout_width="@dimen/custom_dim_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="3"
            android:textSize="@dimen/font_12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/lock_scene_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/lock_scene_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="@dimen/font_15"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lock_scene_name"/>

        <com.iwedia.cltv.ReferenceDrawableButton
            android:id="@+id/unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6.7dp"
            android:layout_marginBottom="@dimen/custom_dim_8_5"
            app:layout_constraintTop_toBottomOf="@+id/lock_scene_index"
            tools:text="@string/unlock"
            android:includeFontPadding="false"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_pin_items"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_dim_77"
            android:layout_marginTop="@dimen/custom_dim_16"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/pressOkTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lock_scene_logo" />


        <TextView
            android:id="@+id/pressOkTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/custom_dim_131"
            android:gravity="center"
            android:textSize="@dimen/font_13"
            android:includeFontPadding="false"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/press_ok_to_confirm" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hint_overlay"
            android:translationZ="@dimen/custom_dim_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/custom_dim_66_5"
            android:layout_marginBottom="@dimen/custom_dim_53_5">

            <TextView
                android:id="@+id/hint_overlay_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_11"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hint_overlay2"
            android:translationZ="@dimen/custom_dim_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/custom_dim_66_5"
            android:layout_marginBottom="@dimen/custom_dim_53_5">

            <TextView
                android:id="@+id/hint_overlay_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_11"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/black_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_information_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:backgroundTint="@color/transparent"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/status_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_25"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_no_signal_layout"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/bg_load"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/input_no_signal_message"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/font_20"
            android:paddingStart="20dp"
            android:visibility="visible"
            android:textColor="#eeeeee"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/input_no_signal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingStart="20dp"
            android:textSize="@dimen/font_16"
            android:visibility="visible"
            android:text="Check the external input or select another input using INPUT button."
            android:textColor="#eeeeee"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_no_signal_message"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/eas_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/eas_float_view"
        android:visibility="gone"/>

<!--This LinearLayout is utilized as a container for dynamically adding the FastZapBanner element within the LiveScene.-->
    <LinearLayout
        android:id="@+id/fast_zap_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="@dimen/custom_dim_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/right"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:textSize="21sp"
        android:text="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:text="left"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/up"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:text="up"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/down"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:text="down"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>