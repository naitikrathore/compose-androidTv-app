<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/drawable_player_scene"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_193_5"
        android:background="@drawable/player_scene_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/player_scene_buffer_position"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/custom_dim_780"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_152"
        android:layout_marginBottom="@dimen/custom_dim_73"
        android:maxHeight="@dimen/custom_dim_4"
        android:minHeight="@dimen/custom_dim_4"
        android:paddingStart="@dimen/custom_dim_0"
        android:paddingEnd="@dimen/custom_dim_0"
        android:progress="0"
        android:progressDrawable="@drawable/curved_progress_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/player_scene_seek_bar"
        android:layout_width="@dimen/custom_dim_780"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_152"
        android:layout_marginBottom="@dimen/custom_dim_68"
        android:maxHeight="@dimen/custom_dim_4"
        android:minHeight="@dimen/custom_dim_4"
        android:paddingStart="@dimen/custom_dim_0"
        android:paddingEnd="@dimen/custom_dim_0"
        android:progress="50"
        android:progressDrawable="@drawable/playback_seekbar_selector"
        android:splitTrack="false"
        android:thumb="@drawable/player_seekbar_thumb_selector"
        android:thumbOffset="@dimen/custom_dim_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player_scene_channel_name"
        android:layout_width="@dimen/custom_dim_89"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/custom_dim_2"
        android:fontFamily="@font/work_sans_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textSize="@dimen/font_15"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/player_scene_index"
        app:layout_constraintEnd_toEndOf="@id/player_scene_index"
        app:layout_constraintStart_toStartOf="@id/player_scene_index" />

    <TextView
        android:id="@+id/player_scene_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="148"
        android:textSize="@dimen/font_13"
        app:layout_constraintEnd_toEndOf="@id/player_scene_logo"
        app:layout_constraintStart_toStartOf="@id/player_scene_logo"
        app:layout_constraintTop_toBottomOf="@id/player_scene_logo" />

    <ImageView
        android:id="@+id/player_scene_logo"
        android:layout_width="@dimen/custom_dim_52_5"
        android:layout_height="@dimen/custom_dim_29_5"
        android:layout_marginStart="@dimen/custom_dim_68_5"
        android:layout_marginBottom="@dimen/custom_dim_82_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/player_scene_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/custom_dim_10"
        android:layout_marginBottom="@dimen/custom_dim_3"
        android:text="00:00 / 00:00"
        android:textSize="@dimen/font_18"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@id/player_scene_seek_bar"
        app:layout_constraintTop_toBottomOf="@id/player_scene_seek_bar" />

    <TextView
        android:id="@+id/player_scene_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/custom_dim_500"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/custom_dim_12_5"
        android:includeFontPadding="false"
        android:textSize="@dimen/font_30"
        app:layout_constraintStart_toEndOf="@id/player_scene_play_pause_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/player_scene_play_pause_wrapper"
        app:layout_constraintTop_toTopOf="@id/player_scene_play_pause_wrapper"
        tools:text="Spider-Man" />

    <TextView
        android:id="@+id/parental_rating"
        android:layout_width="@dimen/custom_dim_43_5"
        android:layout_height="@dimen/custom_dim_18"
        android:layout_marginStart="@dimen/custom_dim_7_5"
        android:layout_marginBottom="@dimen/custom_dim_7_5"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:maxLines="1"
        android:textSize="@dimen/font_13"
        app:layout_constraintBottom_toBottomOf="@id/player_scene_play_pause_wrapper"
        app:layout_constraintStart_toEndOf="@id/player_scene_title"
        android:layout_marginHorizontal="@dimen/custom_dim_6_5"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/player_scene_play_pause_wrapper"
        android:layout_width="@dimen/custom_dim_42_5"
        android:layout_height="@dimen/custom_dim_42_5"
        android:layout_marginBottom="@dimen/custom_dim_10"
        android:focusable="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/custom_dim_37"
        android:layout_marginStart="@dimen/custom_dim_6"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toTopOf="@id/player_scene_seek_bar"
        app:layout_constraintStart_toStartOf="@id/player_scene_seek_bar">

        <ImageView
            android:id="@+id/player_scene_play_pause"
            android:layout_width="@dimen/custom_dim_37_5"
            android:layout_height="@dimen/custom_dim_37_5"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/play" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/player_scene_audio_wrapper"
        android:layout_width="@dimen/custom_dim_37"
        android:layout_height="@dimen/custom_dim_37"
        android:focusable="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/custom_dim_37"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="@id/player_scene_play_pause_wrapper"
        app:layout_constraintTop_toTopOf="@id/player_scene_play_pause_wrapper"        app:layout_constraintEnd_toEndOf="@id/player_scene_seek_bar"
        android:visibility="visible">

        <ImageView
            android:id="@+id/player_scene_audio"
            android:layout_width="@dimen/custom_dim_37"
            android:layout_height="@dimen/custom_dim_37"
            android:src="@drawable/audio" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/player_scene_subtitles_wrapper"
        android:layout_width="@dimen/custom_dim_37"
        android:layout_height="@dimen/custom_dim_37"
        android:layout_marginEnd="@dimen/custom_dim_30_5"
        android:focusable="true"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/custom_dim_37"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@id/player_scene_audio_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/player_scene_play_pause_wrapper"
        app:layout_constraintTop_toTopOf="@id/player_scene_play_pause_wrapper"        android:visibility="visible">

        <ImageView
            android:id="@+id/player_scene_subtitles"
            android:layout_width="@dimen/custom_dim_37"
            android:layout_height="@dimen/custom_dim_37"
            android:layout_marginEnd="@dimen/custom_dim_30_5"
            android:src="@drawable/subtitles" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/audio_and_subtitles_container"
        android:layout_width="@dimen/custom_dim_500"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:translationZ="@dimen/custom_dim_20"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <View
            android:id="@+id/audio_and_subtitles_gradient_view"
            android:layout_width="@dimen/custom_dim_200"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/audio_and_subtitles_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/custom_dim_88"
                android:layout_marginEnd="@dimen/custom_dim_87_5"
                android:textSize="@dimen/font_21"
                tools:text="Audio" />

            <com.bosphere.fadingedgelayout.FadingEdgeLayout
                android:id="@+id/fading_edge_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fel_edge="bottom|top"
                app:fel_size_bottom="@dimen/custom_dim_200"
                app:fel_size_top="@dimen/custom_dim_200">

                <androidx.leanback.widget.VerticalGridView
                    android:id="@+id/side_view_vertical_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/custom_dim_66"
                    android:clipToPadding="false"
                    android:gravity="end"
                    android:paddingBottom="@dimen/custom_dim_40"/>

            </com.bosphere.fadingedgelayout.FadingEdgeLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/player_ff_fr_spd"
        android:layout_width="@dimen/custom_dim_52"
        android:layout_height="@dimen/custom_dim_0"
        android:layout_marginTop="@dimen/custom_dim_10"
        android:layout_marginEnd="@dimen/custom_dim_20"
        android:text=""
        android:textAlignment="viewStart"
        android:textSize="@dimen/font_18"
        app:layout_constraintEnd_toStartOf="@id/tracksContainer"
        app:layout_constraintTop_toBottomOf="@id/player_scene_seek_bar" />

    <LinearLayout
        android:id="@+id/tracksContainer"
        android:layout_width="@dimen/custom_dim_0"
        android:layout_height="@dimen/custom_dim_19_5"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/player_scene_time"
        app:layout_constraintEnd_toStartOf="@id/player_scene_time"
        app:layout_constraintStart_toStartOf="@id/player_scene_seek_bar"
        app:layout_constraintTop_toTopOf="@id/player_scene_time"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/dolby"
            android:layout_width="@dimen/custom_dim_16_5"
            android:layout_height="@dimen/custom_dim_12_5"
            android:src="@drawable/ic_dolby"
            android:visibility="gone"
            android:layout_marginTop="@dimen/custom_dim_2"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:layout_gravity="top"/>


        <ImageView
            android:id="@+id/cc"
            android:layout_width="@dimen/custom_dim_13_5"
            android:layout_height="@dimen/custom_dim_12_5"
            android:src="@drawable/ic_cc"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/custom_dim_2"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:layout_gravity="top"/>

        <ImageView
            android:id="@+id/audio_description"
            android:layout_width="@dimen/custom_dim_13_5"
            android:layout_height="@dimen/custom_dim_12_5"
            android:src="@drawable/ic_audio_description"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/custom_dim_2"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:layout_gravity="top"/>

        <ImageView
            android:id="@+id/is_uhd"
            android:layout_width="@dimen/custom_dim_12_5"
            android:layout_height="@dimen/custom_dim_12_5"
            android:src="@drawable/ic_uhd"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/custom_dim_2"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:layout_gravity="top"/>

        <ImageView
            android:id="@+id/is_hd"
            android:layout_width="@dimen/custom_dim_12_5"
            android:layout_height="@dimen/custom_dim_12_5"
            android:src="@drawable/ic_hd"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/custom_dim_2"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:layout_gravity="top"/>

        <ImageView
            android:id="@+id/is_sd"
            android:layout_width="@dimen/custom_dim_12_5"
            android:layout_height="@dimen/custom_dim_12_5"
            android:src="@drawable/ic_sd"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/custom_dim_2"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:layout_gravity="top"/>

        <ImageView
            android:id="@+id/is_fhd"
            android:layout_width="@dimen/custom_dim_12_5"
            android:layout_height="@dimen/custom_dim_12_5"
            android:src="@drawable/ic_fhd"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/custom_dim_2"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:layout_gravity="top"/>

        <ImageView
            android:id="@+id/ttx_icon"
            android:layout_width="@dimen/custom_dim_18_5"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/custom_dim_15"
            android:scaleType="centerInside"
            android:src="@drawable/ic_ttx"
            android:visibility="gone"
            android:layout_marginTop="-2dp"
            android:layout_gravity="top"/>

        <ImageView
            android:id="@+id/subtitle"
            android:layout_width="@dimen/custom_dim_13_5"
            android:layout_height="@dimen/custom_dim_11_5"
            android:scaleType="fitXY"
            android:src="@drawable/subtitles_ic_new"
            android:visibility="gone"
            android:layout_marginTop="@dimen/custom_dim_3"
            android:layout_marginEnd="@dimen/custom_dim_7_5"
            android:layout_gravity="top"/>

        <LinearLayout
            android:id="@+id/subtitleTrackContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/custom_dim_10"
            android:layout_marginTop="-2dp"
            android:layout_gravity="top">
        </LinearLayout>

        <ImageView
            android:id="@+id/audio"
            android:layout_width="@dimen/custom_dim_11_5"
            android:layout_height="@dimen/custom_dim_11_5"
            android:scaleType="fitXY"
            android:src="@drawable/audio_ic"
            android:visibility="gone"

            android:layout_marginTop="@dimen/custom_dim_3"
            android:layout_marginEnd="@dimen/custom_dim_7_5"
            android:layout_gravity="top"/>

        <LinearLayout
            android:id="@+id/audioTrackContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="-2dp"
            android:layout_gravity="top">

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>