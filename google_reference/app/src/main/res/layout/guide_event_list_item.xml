<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_event_list_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_dim_50"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/guide_event_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide_event_background"
        android:layout_marginEnd="@dimen/custom_dim_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>

    <View
        android:id="@+id/guide_event_separator"
        android:layout_width="@dimen/custom_dim_2_5"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/guide_event_separator"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/indicator_container"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toStartOf="@+id/guide_event_name"
        app:layout_constraintStart_toEndOf="@id/guide_event_separator"
        app:layout_constraintTop_toTopOf="@id/guide_event_name"
        android:minWidth="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/custom_dim_5"
            android:layout_marginEnd="@dimen/custom_dim_10"
            android:layout_marginStart="@dimen/custom_dim_5"
            android:src="@drawable/ic_lock"
            android:id="@+id/lock_image_view"
            android:layout_width="@dimen/custom_dim_15"
            android:visibility="gone"
            android:layout_height="@dimen/custom_dim_20"/>

        <ImageView
            android:id="@+id/status_icon"
            android:layout_marginTop="@dimen/custom_dim_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/custom_dim_5"
            android:layout_marginEnd="@dimen/custom_dim_10"
            android:src="@drawable/ic_fast_play_icon"
            android:visibility="gone" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/custom_dim_3"
            android:layout_marginStart="@dimen/custom_dim_3"
            android:src="@drawable/ic_epg_record_indicator"
            android:id="@+id/record_indicator"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/custom_dim_3"
            android:layout_marginEnd="@dimen/custom_dim_3"
            android:src="@drawable/ic_epg_watchlist_indicator"
            android:id="@+id/watchlist_indicator"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/guide_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="@dimen/font_18"
        android:layout_marginTop="@dimen/custom_dim_1"
        app:layout_constraintStart_toEndOf="@id/indicator_container"
        android:layout_marginEnd="@dimen/custom_dim_10"
        app:layout_constraintEnd_toEndOf="@+id/guide_event_background"
        android:textAlignment="viewStart"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        android:lineSpacingExtra="0sp"/>

    <com.iwedia.cltv.TimeTextView
        android:id="@+id/guide_event_time_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="@dimen/font_13"
        app:layout_constraintStart_toStartOf="@id/guide_event_name"
        app:layout_constraintTop_toBottomOf="@+id/guide_event_name"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/custom_dim_8"
        android:layout_marginEnd="@dimen/custom_dim_15"
        app:layout_constraintEnd_toEndOf="@+id/guide_event_background"
        android:lineSpacingExtra="8.9sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="18:50 - 21:20" />

</androidx.constraintlayout.widget.ConstraintLayout>