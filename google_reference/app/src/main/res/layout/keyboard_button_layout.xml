<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/margin_start"
        android:layout_height="@dimen/custom_dim_25"
        android:layout_width="@dimen/custom_dim_5"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/button"
        android:layout_width="@dimen/custom_dim_30"
        android:layout_height="@dimen/custom_dim_25"
        android:focusable="true"
        android:clickable="true"
        android:textSize="@dimen/custom_dim_19"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/margin_start"
        android:layout_marginBottom="@dimen/custom_dim_10"/>
</RelativeLayout>
