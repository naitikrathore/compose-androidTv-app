<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#000000"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/oad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="184dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/oad_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/oad_title"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/oad_description"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/oad_version"
        android:layout_alignStart="@id/oad_title"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="6dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/oad_download_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/oad_description"
        android:layout_alignStart="@id/oad_title"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnTop"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="750dp"
        android:layout_marginTop="180dp"
        android:focusable="true"
        android:background="@color/oad_button"
        android:text="Button" />

    <Button
        android:id="@+id/btnBottom"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTop"
        android:layout_alignStart="@id/btnTop"
        android:layout_marginTop="8dp"
        android:focusable="true"
        android:background="@color/oad_button"
        android:text="Button" />
</RelativeLayout>