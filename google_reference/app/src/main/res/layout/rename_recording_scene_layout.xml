<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/custom_dim_126"
        android:gravity="center"
        android:textSize="@dimen/font_21"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/edit_layout"
        android:layout_width="@dimen/custom_dim_414"
        android:layout_height="@dimen/custom_dim_36"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/custom_dim_33"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:translationZ="@dimen/custom_dim_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="@dimen/custom_dim_22_5"
            android:layout_height="@dimen/custom_dim_22_5"
            android:layout_marginStart="@dimen/custom_dim_12_5"/>

        <LinearLayout
            android:id="@+id/edittext_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_dim_18"
            android:layout_marginStart="@dimen/custom_dim_10"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/custom_dim_34"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:focusable="true"
                android:imeOptions="actionGo"
                android:inputType="textVisiblePassword|textNoSuggestions"
                android:lines="1"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/font_13" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>