<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_detail_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/parental_rating_linear_layout"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="0dp"
        tools:text="The Dark Knight Rises The Dark Knight RisesThe Dark Knight Rises The Dark Knight RisesThe Dark Knight Rises The Dark Knight Rises"
        tools:textColor="@color/white"
        tools:textSize="22sp" />

    <include layout="@layout/custom_details_parental_rating" />

    <LinearLayout
        android:id="@+id/ll_event_duration"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/custom_dim_30"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/channel_index_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#bdc1c6"
            android:textSize="@dimen/font_12"
            tools:text="145" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginLeft="@dimen/custom_dim_5"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/custom_dim_7_5"
            app:cardElevation="@dimen/custom_dim_0"
            tools:cardBackgroundColor="#00D59999">

            <ImageView
                android:id="@+id/channel_logo_image_view"
                android:layout_width="@dimen/custom_dim_42_5"
                android:layout_height="@dimen/custom_dim_24"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:background="@color/color_4"
                tools:src="@drawable/ic_skip"
                tools:visibility="visible" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/channel_or_event_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/font_n_2"
            android:maxLines="2"
            android:textColor="#e8f0fe"
            android:textSize="@dimen/font_12"
            android:visibility="gone"
            tools:background="#4DAF884E"
            tools:ignore="HardcodedText"
            tools:layout_width="@dimen/custom_dim_130"
            tools:text="This can be visible only when image is not loaded!"
            tools:visibility="visible" />


        <include
            android:id="@+id/event_start_end_time_first_row"
            layout="@layout/custom_details_time"
            app:layout_constraintBottom_toBottomOf="@id/event_title"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
