<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_view"
        android:visibility="visible"
        />
    <include
        android:id="@+id/input_source_id"
        layout="@layout/input_layout"
        android:visibility="gone"
        android:layout_width="@dimen/custom_dim_272"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/custom_dim_24"
        android:layout_marginBottom="@dimen/custom_dim_16"
        android:layout_marginTop="@dimen/custom_dim_16"
        />
    <include
        android:id="@+id/input_source_selection_id"
        android:layout_width="391.4dp"
        android:layout_height="173.9dp"
        layout="@layout/input_selected_layout"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/factory_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|left"
        android:layout_marginLeft="22dip"
        android:layout_marginTop="20dip"
        android:background="#80000000"
        android:gravity="top"
        android:includeFontPadding="false"
        android:paddingEnd="@dimen/custom_dim_3"
        android:paddingStart="@dimen/custom_dim_3"
        android:text="FACTORY MODE"
        android:textColor="#BFF2771A"
        android:textSize="@dimen/font_25"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/noSignalBanner"
        android:layout_width="@dimen/custom_dim_400"
        android:layout_height="@dimen/custom_dim_150"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/custom_dim_40"
        android:visibility="gone"
        android:background="@color/bg_load">

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/custom_dim_20"
            android:text="No Signal"
            android:textStyle="bold"
            android:textColor="@color/fti_text_color"
            android:textSize="@dimen/font_20" />
        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_text"
            android:textColor="@color/fti_text_color"
            android:layout_marginStart="@dimen/custom_dim_20"
            android:layout_marginEnd="@dimen/custom_dim_20"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zapBanner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/custom_dim_40"
        android:layout_marginTop="@dimen/custom_dim_40"
        android:layout_marginEnd="@dimen/custom_dim_40"
        android:padding="@dimen/custom_dim_10"
        android:visibility="gone"
        android:background="@color/transparent"
        android:layout_marginBottom="@dimen/custom_dim_40" >
        <TextView
            android:id="@+id/zapChannel_name"
            android:layout_width="@dimen/custom_dim_105"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/fti_text_color"
            android:textSize="@dimen/font_20" />
        <TextView
            android:id="@+id/zapprogram_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/custom_dim_120"
            android:text="No information"
            android:textColor="@color/fti_text_color"
            android:textSize="@dimen/font_20" />
        <TextView
            android:id="@+id/zapChannel_num"
            android:layout_width="@dimen/custom_dim_105"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/zapChannel_name"
            android:layout_marginTop="@dimen/custom_dim_10"
            android:textColor="@color/fti_text_color"
            android:textSize="@dimen/font_20" />
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/custom_dim_700"
            android:layout_height="@dimen/custom_dim_4"
            android:layout_marginStart="120dp"
            android:max="100"
            android:layout_marginTop="@dimen/custom_dim_8"
            android:progress="0"
            android:layout_below="@id/zapprogram_name"
            android:progressDrawable="@drawable/curved_progress_bar"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>