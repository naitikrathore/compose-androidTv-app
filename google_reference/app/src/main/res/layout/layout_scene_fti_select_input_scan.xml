<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_input_scan_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/logoContainer"
        android:layout_marginStart="@dimen/custom_dim_104"
        android:layout_marginTop="@dimen/custom_dim_147_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="@dimen/custom_dim_200"
        android:layout_height="@dimen/custom_dim_110">
        <ImageView
            android:id="@+id/company_logo_iv"
            android:layout_width="@dimen/custom_dim_136"
            android:layout_height="@dimen/custom_dim_110">
        </ImageView>
    </RelativeLayout>


    <TextView
        android:id="@+id/fti_scan_company_title_tv"
        android:textSize="@dimen/font_21"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_104"
        android:layout_marginTop="@dimen/custom_dim_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoContainer">
    </TextView>

    <TextView
        android:id="@+id/fti_select_input_message_tv"
        android:textSize="@dimen/font_15"
        android:fontFamily="sans-serif"
        android:layout_width="@dimen/custom_dim_440"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_dim_104"
        android:layout_marginTop="@dimen/custom_dim_24"
        app:layout_constraintTop_toBottomOf="@id/fti_scan_company_title_tv"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <TextView
        android:id="@+id/scan_tv"
        android:textSize="@dimen/font_21"
        android:fontFamily="sans-serif-medium"
        android:layout_width="@dimen/custom_dim_70"
        android:layout_height="@dimen/custom_dim_25_5"
        android:layout_marginEnd="@dimen/custom_dim_88"
        android:layout_marginTop="@dimen/custom_dim_88"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <androidx.leanback.widget.VerticalGridView

        android:id="@+id/tvInputsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/custom_dim_18"
        app:layout_constraintTop_toBottomOf="@+id/scan_tv"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>