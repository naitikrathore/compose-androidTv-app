<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background_layout"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="@dimen/custom_dim_57_5"
        android:layout_height="@dimen/custom_dim_57_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/description_text"
        android:src="@drawable/record_icon"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/custom_dim_94_3" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="26.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/description_text2"
        android:layout_marginTop="@dimen/custom_dim_130"
        android:layout_marginBottom="@dimen/custom_dim_2"
        android:textStyle="normal"
        android:textSize="19sp"
        android:textColor="#b7b7b7"
        android:lineSpacingExtra="2.9sp"
        />

    <TextView
        android:id="@+id/description_text2"
        android:layout_width="wrap_content"
        android:layout_height="29.5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/description_text"
        android:layout_marginBottom="@dimen/custom_dim_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/custom_dim_21"
        android:textColor="#eeeeee"
        />

    <TextView
        android:id="@+id/description_text3"
        android:layout_width="wrap_content"
        android:layout_height="21.5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/description_text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/font_15"
        android:textColor="#b7b7b7"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/description_text3"
        >
        <androidx.leanback.widget.VerticalGridView

            android:id="@+id/channels_in_conflict_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/custom_dim_25"
            android:orientation="vertical"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>