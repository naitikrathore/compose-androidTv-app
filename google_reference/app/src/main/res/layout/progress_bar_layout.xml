<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_15" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/custom_dim_258"
        android:layout_height="@dimen/custom_dim_2_5"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/custom_dim_15"
        android:layout_below="@+id/title_tv"
        android:progressDrawable="@drawable/curved_progress_bar"
        android:layout_alignStart="@+id/title_tv"
        android:progress="0"/>

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/progress_bar"
        android:layout_marginTop="@dimen/custom_dim_24"
        android:layout_marginStart="@dimen/custom_dim_10"
        android:textSize="@dimen/font_15"/>
</RelativeLayout>