<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mmi_menu_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="29.5dp"
            android:layout_marginLeft="@dimen/custom_dim_114"
            android:layout_marginTop="@dimen/custom_dim_45"
            android:gravity="center"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_dim_18"
            android:layout_marginLeft="@dimen/custom_dim_114"
            android:layout_marginTop="@dimen/custom_dim_6_5"
            android:gravity="center"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="772.5dp"
            android:layout_height="285dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/custom_dim_94"
            android:layout_marginTop="@dimen/custom_dim_23">

            <androidx.leanback.widget.VerticalGridView
                android:id="@+id/left_options_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/custom_dim_18"
        android:layout_marginLeft="@dimen/custom_dim_114"
        android:layout_marginBottom="@dimen/custom_dim_43"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>