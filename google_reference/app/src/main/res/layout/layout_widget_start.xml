<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/custom_dim_50"
            android:layout_marginLeft="-1dp"
            />
        <NumberPicker
            android:id="@+id/time_picker_hours"
            android:layout_marginTop="@dimen/custom_dim_10"
            android:layout_width="@dimen/custom_dim_50"
            android:layout_height="@dimen/custom_dim_100"
            android:layout_marginStart="@dimen/custom_dim_10"/>

        <NumberPicker
            android:id="@+id/time_picker_minutes"
            android:layout_width="@dimen/custom_dim_50"
            android:layout_height="@dimen/custom_dim_100"
            android:layout_marginTop="@dimen/custom_dim_10"
            android:layout_marginStart="@dimen/custom_dim_10"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/custom_dim_50"
            android:layout_marginStart="@dimen/custom_dim_30"/>

        <NumberPicker
            android:layout_width="@dimen/custom_dim_50"
            android:layout_height="@dimen/custom_dim_100"
            android:id="@+id/date_picker1"
            android:layout_marginTop="@dimen/custom_dim_10"
            android:layout_marginStart="@dimen/custom_dim_10"/>

        <NumberPicker
            android:layout_width="@dimen/custom_dim_50"
            android:layout_height="@dimen/custom_dim_100"
            android:layout_marginTop="@dimen/custom_dim_10"
            android:id="@+id/date_picker2"
            android:layout_marginStart="@dimen/custom_dim_10"/>

        <NumberPicker
            android:layout_width="@dimen/custom_dim_50"
            android:layout_height="@dimen/custom_dim_100"
            android:layout_marginTop="@dimen/custom_dim_10"
            android:id="@+id/date_picker3"
            android:layout_marginStart="@dimen/custom_dim_10"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>