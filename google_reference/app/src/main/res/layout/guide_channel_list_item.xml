<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/guide_channel_list_root_view"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/custom_dim_6"
    android:layout_marginEnd="@dimen/custom_dim_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/guide_channel_list_item_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_50"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/custom_dim_46"
            android:layout_height="match_parent"
            app:layout_constraintHeight="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/index_layout">
            <LinearLayout
                android:id="@+id/icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guide_channel_list_index"
                >
                <ImageView
                    android:id="@+id/guide_is_locked"
                    android:layout_width="@dimen/custom_dim_15"
                    android:layout_height="@dimen/custom_dim_15"
                    android:src="@drawable/ic_channel_lock"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/guide_is_skipped"
                    android:layout_width="@dimen/custom_dim_15"
                    android:layout_height="@dimen/custom_dim_15"
                    android:src="@drawable/ic_channel_skip"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/guide_is_scrambled"
                    android:layout_width="@dimen/custom_dim_15"
                    android:layout_height="@dimen/custom_dim_15"
                    android:src="@drawable/scrambled_channel_icon"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView

                android:id="@+id/guide_channel_list_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_13"
                android:text="100"
                android:maxLines="1"
                android:gravity="center"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/icon_layout"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView

                android:id="@+id/guide_channel_source_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_10"
                android:textColor="@color/white"
                android:maxLines="1"
                android:gravity="center"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_channel_list_index"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/guide_channel_list_logo"
            android:layout_width="@dimen/custom_dim_75"
            android:layout_height="@dimen/custom_dim_36"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/index_layout"
            android:layout_marginEnd="@dimen/custom_dim_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/guide_channel_list_no_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:lines="3"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/font_13"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/custom_dim_5"
            android:lineSpacingMultiplier="0.7"
            app:layout_constraintStart_toEndOf="@id/index_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/custom_dim_5"
            android:visibility="gone"
            tools:text="RTL Zwei"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/guide_channel_list_separator_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dim_186"
        app:layout_constraintTop_toBottomOf="@+id/guide_channel_list_item_view"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>