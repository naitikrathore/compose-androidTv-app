<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_15"
        android:paddingStart="@dimen/custom_dim_10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="@dimen/custom_dim_13">
        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="@dimen/custom_dim_5"
            android:layout_height="@dimen/custom_dim_11"
            android:layout_marginEnd="@dimen/custom_dim_5"
            android:layout_marginTop="@dimen/custom_dim_15"
            android:background="@drawable/arrow_left"/>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_25"
            android:paddingStart="@dimen/custom_dim_15"
            android:paddingEnd="@dimen/custom_dim_15"
            android:paddingTop="@dimen/custom_dim_5"
            android:paddingBottom="@dimen/custom_dim_5"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="@dimen/custom_dim_5"
            android:layout_height="@dimen/custom_dim_11"
            android:layout_marginTop="@dimen/custom_dim_15"
            android:layout_marginStart="@dimen/custom_dim_5"
            android:background="@drawable/arrow_right"/>
    </LinearLayout>
</RelativeLayout>